            <!-- Buttons added here -->
            <div class="mt-4">
                <a href="/employer" class="btn btn-primary mr-2">For Employer</a>
                <a href="#" class="btn btn-secondary">For Employee</a>
            </div>
        </div>
        <div class="col-md-6">
            <img src="/img/logo.png" class="img-fluid logo">
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<style>
    .logo {
        max-width: 100%;
        height: auto;
    }

    .text-container {
        margin-top: 50px; /* Default margin top */
    }

    @media (max-width: 768px) {
        .logo {
            max-width: 80%;
        }

        .text-container {
            margin-top: 30px; /* Adjusted margin top for smaller screens */
        }
    }

    @media (max-width: 576px) {
        .logo {
            max-width: 70%;
        }

        .text-container {
            margin-top: 20px; /* Further adjustment for even smaller screens */
        }
    }
</style>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        const employerBtn = document.getElementById('employerBtn');

        employerBtn.addEventListener('click', function(event) {
            event.preventDefault(); // Prevent default link behavior

            // Show a confirmation dialog
            const confirmed = confirm('Are you an employer?');
            if (confirmed) {
                // If confirmed, redirect to the employer page or handle accordingly
                window.location.href = '/employer';
            } else {
                // Optionally, do something else if not confirmed
            }
        });
    });
</script>